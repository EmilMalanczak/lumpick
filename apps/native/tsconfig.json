{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": ["@lumpick/ts-config/base.json", "expo/tsconfig.base"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "~components/*": ["./components/*"],
      "~constants/*": ["./constants/*"],
      "~utils/*": ["./utils/*"],
      "~storybook/*": [".storybook/*"]
    },
    "jsx": "react-native",
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "moduleResolution": "NodeNext",
    "module": "NodeNext"
  },
  "references": [
    {
      "path": "../api"
    }
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    ".storybook"
  ]
}
