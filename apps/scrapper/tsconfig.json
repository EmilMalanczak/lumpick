{
  "extends": "@lumpik/ts-config/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~utils/*": ["./src/utils/*"],
      "~config/*": ["./src/config/*"],
      "~modules/*": ["./src/modules/*"]
    }
  },
  "include": ["*.ts", "src", "scripts"],
  "exclude": ["node_modules"]
}
