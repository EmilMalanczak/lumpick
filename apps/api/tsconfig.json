{
  "extends": "@lumpick/ts-config/base.json",
  "compilerOptions": {
    "tsBuildInfoFile": "node_modules/.cache/tsbuildinfo.json",
    "baseUrl": "./",
    "paths": {
      "~utils/*": ["src/utils/*"],
      "~mails/*": ["src/mails/*"],
      "~config/*": ["src/config/*"],
      "~modules/*": ["src/modules/*"],
      "~plugins/*": ["src/plugins/*"],
      "~/*": ["src/*"]
    },
    "declaration": true,
    "composite": true,
    "noEmit": false
  },
  "include": ["*.ts", "src", "sentry.config.ts", "esbuild.config.mjs"],
  "exclude": ["node_modules"]
}
