{
  "name": "@lumpick/api",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": "./src/index.ts"
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "license": "MIT",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --packages=external --platform=node --format=cjs --outdir=dist --sourcemap",
    "dev": "dotenv -e .env.development -- tsx watch --clear-screen=false src/index.ts",
    "dev:studio": "pnpm dlx prisma studio --browser none",
    "serve": "esbuild src/index.ts --bundle --packages=external --platform=node --format=cjs --outdir=dist --sourcemap && node dist/index.js",
    "clean": "rm -rf .turbo node_modules dist",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@lumpick/eslint-config": "workspace:*",
    "@lumpick/prettier-config": "workspace:*",
    "@lumpick/ts-config": "workspace:*",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.6",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.3.0",
    "esbuild": "^0.20.1",
    "esbuild-plugin-pino": "^2.1.1",
    "eslint": "^8.56.0",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "prettier": "^3.2.5",
    "tiny-glob": "^0.2.9",
    "tsx": "^4.7.1",
    "typescript": "^5.6.3"
  },
  "eslintConfig": {
    "extends": [
      "@lumpick/eslint-config/base"
    ]
  },
  "prettier": "@lumpick/prettier-config",
  "dependencies": {
    "@fastify/autoload": "^6.0.2",
    "@fastify/cors": "^10.0.1",
    "@fastify/sensible": "^6.0.1",
    "@fastify/swagger": "^9.3.0",
    "@fastify/swagger-ui": "^5.1.0",
    "@lumpick/db": "workspace:*",
    "@trpc/server": "11.0.0-rc.660",
    "@types/nodemailer": "^6.4.16",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^2.4.3",
    "drizzle-zod": "^0.5.1",
    "fastify": "^5.1.0",
    "fastify-plugin": "^5.0.1",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^6.9.16",
    "postgres": "^3.4.5",
    "superjson": "^2.2.1",
    "trpc-ui": "^1.0.4",
    "uuid": "^11.0.3",
    "zod": "^3.23.8"
  }
}
