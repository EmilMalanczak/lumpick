{
  "name": "@lumpik/api",
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": "./index.ts"
  },
  "main": "./index.ts",
  "types": "./index.ts",
  "license": "MIT",
  "scripts": {
    "build": "esbuild index.ts --bundle --packages=external --platform=node --format=cjs --outdir=dist --sourcemap",
    "dev": "dotenv -e .env.development -- tsx watch --clear-screen=false index",
    "dev:studio": "pnpm dlx prisma studio --browser none",
    "serve": "esbuild index.ts --bundle --packages=external --platform=node --format=cjs --outdir=dist --sourcemap && node dist/index.js",
    "clean": "rm -rf .turbo node_modules dist",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@lumpik/eslint-config": "workspace:^0.1.0",
    "@lumpik/prettier-config": "workspace:^0.1.0",
    "@lumpik/ts-config": "workspace:^0.1.0",
    "eslint": "^8.56.0",
    "fastify": "4.26.1",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "extends": [
      "@lumpik/eslint-config/base"
    ]
  },
  "prettier": "@lumpik/prettier-config",
  "dependencies": {
    "@fastify/autoload": "^5.8.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@trpc/server": "^10.45.1",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.3.0",
    "esbuild": "^0.20.1",
    "esbuild-plugin-pino": "^2.1.1",
    "fastify-plugin": "^4.5.1",
    "pino": "^8.19.0",
    "pino-pretty": "^10.3.1",
    "superjson": "^2.2.1",
    "tiny-glob": "^0.2.9",
    "tsx": "^4.7.1",
    "zod": "^3.22.4"
  }
}
