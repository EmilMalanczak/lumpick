{
  "name": "@lumpik/db-migrate",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "files": [
    "dist",
    "migrations/**"
  ],
  "bin": {
    "db-migrate": "./dist/index.js"
  },
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "push": "drizzle-kit push:pg",
    "generate": "drizzle-kit generate:pg",
    "build": "tsup src/index.ts --format esm",
    "migrate": "pnpm with-env tsx migrate/index.mts",
    "studio": "drizzle-kit studio",
    "with-env": "dotenv -e ../../.env --"
  },
  "devDependencies": {
    "@lumpik/eslint-config": "workspace:^0.1.0",
    "@lumpik/prettier-config": "workspace:^0.1.0",
    "@lumpik/ts-config": "workspace:^0.1.0",
    "@types/pg": "^8.11.2",
    "dotenv-cli": "^7.3.0",
    "drizzle-kit": "^0.20.14",
    "eslint": "^8.56.0",
    "pg": "^8.11.3",
    "prettier": "^3.2.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "tsx": "^4.7.1"
  },
  "eslintConfig": {
    "extends": [
      "@lumpik/eslint-config/base"
    ]
  },
  "prettier": "@lumpik/prettier-config",
  "dependencies": {
    "drizzle-orm": "^0.29.4",
    "postgres": "^3.4.3"
  }
}
