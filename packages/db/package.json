    "pg": "^8.11.3",
    "prettier": "^3.2.5",
    "typescript": "^5.3.3"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@lumpik/eslint-config/base"
    ]
  },
  "prettier": "@lumpik/prettier-config",
  "dependencies": {
    "drizzle-orm": "^0.29.4",
