{
  "name": "@lumpick/db",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    ".": "./index.ts",
    "./schemas": "./schemas.ts",
    "./types": "./types.ts"
  },
  "main": "./index.ts",
  "types": "./index.ts",
  "license": "MIT",
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "drizzle-up": "pnpm with-env drizzle-kit up",
    "push": "pnpm with-env drizzle-kit push",
    "generate": "pnpm with-env drizzle-kit generate",
    "studio": "pnpm with-env drizzle-kit studio --verbose",
    "with-env": "dotenv -e ../../.env --"
  },
  "devDependencies": {
    "@lumpik/eslint-config": "workspace:*",
    "@lumpik/prettier-config": "workspace:*",
    "@lumpik/ts-config": "workspace:*",
    "@types/pg": "^8.11.10",
    "dotenv-cli": "^7.4.4",
    "eslint": "^8.57.1",
    "pg": "^8.13.1",
    "prettier": "^3.4.1",
    "typescript": "^5.7.2"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@lumpik/eslint-config/base"
    ]
  },
  "prettier": "@lumpik/prettier-config",
  "dependencies": {
    "drizzle-kit": "^0.28.1",
    "drizzle-orm": "^0.36.4",
    "drizzle-zod": "^0.5.1",
    "postgres": "^3.4.5",
    "zod": "^3.23.8"
  }
